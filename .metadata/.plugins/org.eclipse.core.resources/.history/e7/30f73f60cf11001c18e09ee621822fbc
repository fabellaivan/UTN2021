#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);
	char cadena[21];
	int largo;
	printf("Ingrese una palabra: ");
	scanf("%s",cadena);
	printf("La cadena es %s",cadena);

	largo=strlen(cadena);
	printf("Largo de cadena:%d ",largo);
	return EXIT_SUCCESS;
}
