#include "Biblioteca.h"
/// @fn int Suma(int, int)
/// @brief
///
/// @param numeroA
/// @param numeroB
/// @return
int Suma(int numeroA, int numeroB)
{
	int resultado;
	resultado=numeroA+numeroB;
	return resultado;
}

/// \fn int Resta(int, int)
/// \brief
///
/// \param numeroA
/// \param numeroB
/// \return
int Resta(int numeroA, int numeroB)
{
	int resultado;
	resultado=numeroA-numeroB;
	return resultado;
}

/// @fn int Multiplicacion(int, int)
/// @brief
///
/// @param numeroA
/// @param numeroB
/// @return
int Multiplicacion(int numeroA, int numeroB)
{
	int resultado;
	resultado=numeroA*numeroB;
	return resultado;
}

/// @fn float Division(int, int)
/// @brief
///
/// @param numeroA
/// @param numeroB
/// @return
float Division(int numeroA, int numeroB)
{
	float resultado;
	if(numeroB==0)
	{
		return 0;
	}
	else
	{
		resultado=(float)numeroA/numeroB;
		return resultado;
	}
}

/// @fn int factorial(int)
/// @brief
///
/// @param numero
/// @return
int factorial(int numero)
{

	int factorial;
	factorial=1;

	if(numero<0||numero>12||numero==0)
	{
		return 0;
	}
	else
	{
		for(int i=numero;i>1;i--)
		{
			factorial=factorial*i;
		}
		return factorial;
	}
}


